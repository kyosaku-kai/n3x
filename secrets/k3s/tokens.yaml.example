# K3s Token Configuration Template
# This file should be encrypted using sops before use
#
# To encrypt this file:
# 1. Copy this file to tokens.yaml
# 2. Generate a secure token: openssl rand -hex 32
# 3. Replace the placeholder values
# 4. Encrypt with: sops -e -i tokens.yaml
#
# The encrypted file will be used by sops-nix to provide tokens to k3s

# Server token - shared secret for cluster initialization
# This token is used by all k3s servers to join the same cluster
server-token: "REPLACE_WITH_GENERATED_SERVER_TOKEN"

# Agent token - used by agents to join the cluster
# Can be the same as server-token for simplicity
agent-token: "REPLACE_WITH_GENERATED_AGENT_TOKEN"

# Optional: Additional tokens for different node groups
# storage-node-token: "REPLACE_WITH_GENERATED_TOKEN"
# edge-node-token: "REPLACE_WITH_GENERATED_TOKEN"